<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6fa"
    android:orientation="vertical"
    tools:context="skirosoft.locationinupdates.RoadUpdates"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6fa"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:src="@drawable/road" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rainQues"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="Is there any road block or slow traffic?"
                android:textSize="20dp" />
            </LinearLayout>


                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:textAlignment="center">

                     <RadioButton
                         android:id="@+id/radioY"
                         android:layout_width="123dp"
                         android:layout_height="match_parent"
                         android:checked="false"
                         android:text="Yes"
                         android:textAlignment="center"
                         android:textColor="#000080" />

                     <RadioButton
                android:layout_width="123dp"
                android:layout_height="48dp"
                         android:textColor="#000080"
                android:text="No  "
                android:textAlignment="center"
                android:id="@+id/radioN"
                android:checked="false" />

        </LinearLayout>

        <Spinner
            android:id="@+id/material_spinner2"
            android:layout_width="330dp"
            android:layout_height="71dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="#CFD8DC" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fa8072"
            android:textColorHint="#CFD8DC"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="75dp"
                android:layout_height="54dp"
                android:layout_weight="0.36"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:text="LATTIDUDE AND LONGITUDE"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/holo_green_dark"
                android:textColorHint="#CFD8DC"
                android:layout_weight="0.13" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="205dp"
                android:layout_height="44dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fa8072"
                android:textColorHint="#CFD8DC"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/txtdate"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fa8072"
                android:textColorHint="#CFD8DC"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:text="Save Location"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="20dp"
            android:background="@drawable/yellow"
            android:id="@+id/button1"/>



<ListView
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:id="@+id/listview">

</ListView>




    </LinearLayout>


</ScrollView>
