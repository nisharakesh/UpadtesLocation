<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#e6e6fa"
android:orientation="vertical"
    tools:context="skirosoft.locationinupdates.GoldUpdates">

android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6fa"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:src="@drawable/gold" />


    <TextView
        android:id="@+id/rainQues"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Todays  Gold Rate "
        android:textAlignment="center"
        android:textSize="25dp"/>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fa8072"
        android:textColorHint="#CFD8DC"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="75dp"
            android:layout_height="51dp"
            android:layout_weight="0.20"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/holo_green_dark"
            android:textColorHint="#CFD8DC"
            android:text="LATTIDUDE AND LONGITUDE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:textSize="20dp"
            android:hint="Amount "
            android:layout_width="218dp"
            android:layout_height="57dp"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1e90ff"
            android:id="@+id/ed_amt1"/>

        <TextView
            android:id="@+id/txt_svrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Per Soverign"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1e90ff"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/ed_amt2"
            android:layout_width="218dp"
            android:layout_height="59dp"
            android:hint="Amount  "
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1e90ff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ed_gram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Per Gram"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1e90ff"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_dte"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fa8072"
            android:textColorHint="#CFD8DC"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#fa8072"
            android:textColorHint="#CFD8DC"
            android:textSize="15dp" />
    </LinearLayout>


    <ListView
    android:layout_width="wrap_content"
    android:layout_height="6dp"
    android:id="@+id/listview">

</ListView>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="20dp"
        android:background="@drawable/yellow"
        android:text="Save Location" />


</LinearLayout>
    </ScrollView>




